<Project>
  <!-- Common MSBuild targets for all projects -->

  <PropertyGroup>
    <GeneratedCodePattern>*.g.cs</GeneratedCodePattern>
  </PropertyGroup>

  <!-- Exclude generated files from code coverage -->
  <ItemGroup>
    <Compile Update="**\*.g.cs">
      <ExcludeFromCodeCoverage>true</ExcludeFromCodeCoverage>
    </Compile>
    <Compile Update="**\Generated\**\*.cs">
      <ExcludeFromCodeCoverage>true</ExcludeFromCodeCoverage>
    </Compile>
  </ItemGroup>

  <!-- CSharpier Integration -->
  <!-- Restore tools before formatting -->
  <Target
    Name="RestoreTools"
    BeforeTargets="FormatCode"
    Condition="'$(Configuration)' == 'Debug' AND '$(MSBuildProjectName)' == 'Ddap.Core'"
  >
    <Exec
      Command="dotnet tool restore"
      WorkingDirectory="$(MSBuildThisFileDirectory)"
      ContinueOnError="true"
    />
  </Target>

  <!-- Format code in Debug mode -->
  <Target
    Name="FormatCode"
    BeforeTargets="Build"
    Condition="'$(Configuration)' == 'Debug' AND '$(MSBuildProjectName)' == 'Ddap.Core'"
  >
    <Exec
      Command="dotnet csharpier format ."
      WorkingDirectory="$(MSBuildThisFileDirectory)"
      ContinueOnError="true"
      IgnoreExitCode="true"
    />
  </Target>
</Project>
